<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             tools:context="no.husby.iform06.app.ExerciseResultFragment">
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:isScrollContainer="false"
				android:layout_height="fill_parent"
				android:id="@+id/linearLayoutReps" android:padding="10dp" android:layout_alignParentBottom="true">
			<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:text="Exercise name"
					android:theme="@style/HeaderTheme"
					android:id="@+id/exerciseName" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:padding="10dp" android:layout_gravity="bottom">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:theme="@style/BigLabel"
						android:text="@string/weight"
						android:id="@+id/weightLabel" android:singleLine="true"/>
				<EditText
						android:layout_width="98dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:inputType="numberDecimal"
						android:text=""
						android:background="@drawable/myedittext"
						android:theme="@style/ButtonsTheme"
						android:id="@+id/weight" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
				android:id="@+id/linearLayoutButtons" android:layout_gravity="bottom|center_horizontal">
			<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Forrige"
					android:layout_weight="1"
					android:textColor="#ffffff"
					android:background="@drawable/mybutton"
					android:theme="@style/ButtonsTheme"
					android:id="@+id/prevExercise" android:layout_marginRight="1dp" android:layout_gravity="bottom"/>
			<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Neste"
					android:layout_weight="1"
					android:textColor="#ffffff"
					android:background="@drawable/mybutton"
					android:theme="@style/ButtonsTheme"
					android:id="@+id/nextExercise" android:layout_marginLeft="1dp" android:layout_gravity="bottom"/>
		</LinearLayout>
	</RelativeLayout>
</FrameLayout>
